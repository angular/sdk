{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "rootDir": ".",
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "sourceRoot": ".",
    // Inline sources are necessary for out tests to show the proper sources, since we are using
    // Istanbul (not Constantinople) as well, and applying both source maps to get the original
    // source in devtools.
    "inlineSources": true,
    "strictNullChecks": true,
    "target": "es6",
    "lib": [
      "es2017"
    ],
    "baseUrl": "",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@angular/schematics": [ "./packages/schematics/src/index" ]
    }
  },
  "exclude": [
    "bazel-*/**/*",
    "build/**/*",
    "dist/**/*",
    "node_modules/**/*",
    "tmp/**/*",
    "packages/schematics-cli/schematics/*/files/**"
  ]
}
